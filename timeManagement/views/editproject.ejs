<%- include header.ejs %>

<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <h3 class="page-title">Edit Project</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Add User -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Edit Project Details</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <div class="row">
                            <div class="col">
                                <form method="post">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feFirstName">Project ID</label>
                                            <input type="text" name="projectID" value="<%= project.projectID %>" class="form-control"
                                                readonly> </div>
                                        <div class="form-group col-md-6">
                                            <label for="feEmailAddress">Project Name</label>
                                            <input type="text" name="projectName" value="<%= project.projectName %>"
                                                class="form-control">

                                        </div>
                                    </div>
                                   
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                              
                                            <label for="feEmpolyeeID">Project Status</label>
                                            <select class="form-control" name="status">
                                                    <% if (project.status == "Open") { %>
                                                        <option value="Open" selected>Open</option>
                                                        <option value="Closed">Closed</option>
                                                     
                                    
                                                    <%} else {%>
                                                        <option value="Open">Open</option>
                                                        <option value="Closed" selected>Closed</option>
                                                    <% }%>
                                                   
                                                </select>
                                            </div>
                                        
                                            <div class="form-group col-md-6">
                                                    <label>Team Member</label> <br>
                                                    <select id="team_members" name="team_members" multiple style="width: 200px;">
                                                        <% for (var i = 0; i < allUser.length; i++) {  %>
                                                                   
                                                                   
                                                            <option id='<%= allUser[i].employeeID %>' value='<%=allUser[i].employeeID%>:<%= allUser[i].firstName %>:<%= allUser[i].lastName%>'><%= allUser[i].firstName %> <%= allUser[i].lastName %></option>

                                                    

                                                        
                                                       
                                                       
                                                        
                                                     
                                                     
                                                    

                                                 
            
                                                 
                                                  <% }  %>

                                                           

                                                    
                          
                          
                                                     
                                                    </select>
                                                  </div>
                                    </div>
                                
                                  
                                    <input type="submit" value="Add User" class="btn btn-success">
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Add User -->
</div>
</main>
</div>
</div>

